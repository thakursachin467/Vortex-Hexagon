<div class="container Content">
<h2 class="page-title text-center">Add Category</h2>

<a href="/admin/categories" class="btn btn-primary ">Go back to all Categories</a>

<br> <br>

<form  action="/admin/categories/add-category" method="post">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" class="form-control" placeholder="Enter Title" value="{{title}}" required>

  </div>
  <div class="d-flex justify-content-center">
  <button type="submit"  class="btn btn-primary">Submit</button>
    </div>
</form>
</div>
